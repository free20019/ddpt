		.sjx:before{
			content: '';
			display: inline-block;
			position: absolute;
			top:0;
			left: 0;
			width: 25px;
			height: 30px;
			background: #fff;
			border-right: 1px solid #1e8cff;
		}
		.sjx:after{
			content: '';
			display: inline-block;
			width: 0px;
			height: 0;
			border: 10px solid transparent;
			border-left-color: #eeeeee;
			position: absolute;
			top:50%;
			left: 8px;
			margin-top: -10px;
